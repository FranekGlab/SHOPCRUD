@model List<SHOPCRUD.Models.DomainModels.Client>

@{
}

<h1>Clients</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Name</th>
            <th>Tel Number</th>
            <th>Date Of Birth</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Id</td>
                <td>@client.Email</td>
                <td>@client.Name</td>
                <td>@client.TelNubmer</td>
                <td>@client.DateOfBirth.ToString("dd-MM-yyyy")</td>
                <td>@client.Address</td>
                <td><a href="Clients/View/@client.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>